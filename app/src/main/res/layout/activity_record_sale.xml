<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBackToWaiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select recipe" />
        <Spinner
            android:id="@+id/spinnerRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating (1-5)" />
        <Spinner
            android:id="@+id/spinnerRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appreciation / Note" />
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Short note"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnRecordSaleConfirm"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record Sale" />

    </LinearLayout>
</ScrollView>
