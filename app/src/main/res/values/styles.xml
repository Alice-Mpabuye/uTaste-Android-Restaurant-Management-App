<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your colors in colors.xml -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorPrimaryVariant">@color/purple_grey_40</item>
        <item name="colorSecondary">@color/pink_40</item>
    </style>

    <!-- Text styles -->
    <style name="TextBodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="TextTitleLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
